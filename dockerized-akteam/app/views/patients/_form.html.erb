<%= form_with(model: patient, local: true) do |form| %>
  <% if patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>
      <ul>
        <% patient.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :firstname, :class => "control-label col-md-1" %>
    <%= form.text_field :firstname, :class => "col-md-3" %>
  </div>

  <div class="field">
    <%= form.label :lastname, :class => "control-label col-md-1" %>
    <%= form.text_field :lastname, :class => "col-md-3" %>
  </div>

  <div class="field">
    <%= form.label :date_of_birth, "Date of Birth", :class => "control-label col-md-1" %>
    <%= form.date_select :date_of_birth, :start_year => Date.current.year, :end_year => 1900 %>
  </div>

  <div class="field">
    <%= form.label :pesel, "PESEL", :class => "control-label col-md-1" %>
    <%= form.text_field :pesel, :class => "col-md-3" %>
  </div>

  <div class="field" style="margin-top: 10px;">
    <%= form.submit 'Save', :class => "btn btn-success btn-sm" %>
  </div>

<% end %>
