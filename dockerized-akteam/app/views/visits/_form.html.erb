<%= form_with(model: visit, local: true) do |form| %>
  <% if visit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(visit.errors.count, "error") %> prohibited this visit from being saved:</h2>
      <ul>
        <% visit.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :doctor_id, :class => "control-label col-md-1" %>
    <%= form.collection_select :doctor_id, @doctors, :id, :name, include_blank: true, :class => "col-md-3" %>
  </div>

  <div class="field">
    <%= form.label :patient_id, :class => "control-label col-md-1" %>
    <%= form.collection_select :patient_id, @patients, :id, :name, include_blank: true, :class => "col-md-3" %>
  </div>

  <div class="field">
    <%= form.label :date_of_visit, :class => "control-label col-md-1" %>
    <%= form.datetime_select :date_of_visit %>
  </div>

  <div class="field">
    <%= form.label :description, :class => "control-label col-md-1" %>
    <%= form.text_area :description, :class => "col-md-3" %>
  </div>

  <div class="field">
    <%= form.label :price, :class => "control-label col-md-1" %>
    <%= form.text_field :price, :class => "col-md-3" %>
  </div>

  <div class="field" style="margin-top: 10px;">
    <%= form.submit 'Save', :class => "btn btn-success btn-sm" %>
  </div>
<% end %>
